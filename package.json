{
  "name": "lot-numbers",
  "version": "1.0.0",
  "description": "creates 8-character lot numbers in a very specific format",
  "main": "lib/index.js",
  "scripts": {
    "test": "tsc && mocha --timeout 5000 -r ts-node/register src/tests/**/*",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "base62": "^2.0.1"
  },
  "keywords": [],
  "author": "Rob Eberhardt <rob.eberhardt@gmail.com> (http://twitter.com/robeberhardt)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robeberhardt/lot-numbers.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.8",
    "chai": "^4.2.0",
    "mocha": "^10.2.0",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  }
}
